{
    "hooks": {
        "Stop": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "powershell.exe -c \"[console]::beep(1000,500)\""
                    }
                ]
            }
        ] ,
         "Notification": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "powershell.exe -WindowStyle Hidden -ExecutionPolicy Bypass -File .claude/show-notification.ps1 -Message 'Claude needs your input!' -Title 'Notification' -Icon 'Question'"
                    }
                ]
            }
        ],
        "Finish": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "powershell.exe -WindowStyle Hidden -ExecutionPolicy Bypass -File .claude/show-notification.ps1 -Message 'Task completed!' -Title 'Finish' -Icon 'Asterisk'"
                    }
                ]
            }
        ],
    }
}

